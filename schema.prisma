generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model User {
  id        Int      @id @default(autoincrement())
  email String @unique
  password String
  firstName String
  lastName String
  createdAt DateTime @default(now())
  updateUt DateTime @updatedAt
  cartItems CartItem[]
}

model Product {
  id        Int      @id @default(autoincrement())
  name String
  description String
  price Float
  image String

  categoryId Int
  category Category @relation(fields : [categoryId], references: [id])
}

model CartItem {
  id        Int      @id @default(autoincrement())
  name String
  description String
  price Float
  image String
  quantity Int


  userId Int @unique
  user User @relation(fields : [userId], references: [id])
}

model Category {
  id        Int      @id @default(autoincrement())
  name String
  image String
  color String
  products Product[]
}